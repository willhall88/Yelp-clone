<%= link_to "Add a new restaurant", new_restaurant_path %>

<% if @restaurants.any? %>
  <% @restaurants.all.each do |restaurant| %>

      <h2><%= restaurant.name %></h2>
      <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
      <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete, data: {confirm: 'Are you sure?'} %>
      <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>

      <h3>Average Review: <%= restaurant.reviews.average%></h3>
      <h4><%= pluralize restaurant.reviews.count, 'review' %></h4>
      <ul>
        <% restaurant.reviews.each do |review| %>
          <li>
            <strong><%= review.rating %></strong> - <%= review.comments%>
          </li>
        <%end%>
      </ul>
  <% end %>
<% else %>
  No restaurants yet
<% end %>